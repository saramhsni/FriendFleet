{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <h5 class="rounded-md p-2 border-red-300 bg-red-50 border mb-4" role="alert">{{ flash_error }}</h5>
    {% endfor %}
  

    {{ form_start(registrationForm) }}
    <div class="mx-20 mt-5">
        <h1 class="text-xl font-bold mt-15 mb-5">Registration Form</h1>
        <h2 class="text-l font-semibold">
            Basic Information
        </h2>
        <h4 class="text-gray-500 my-4 pb-4 ">
            Enter your credentials
        </h4>

        <div>
            {{ form_label(registrationForm.pseudo, 'Please enter Pseudo *', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(registrationForm.pseudo, {'attr':{'class':'block w-full shadow-sm  border-gray-300 rounded-md border mt-1 mb-2 registration_form_input'}}) }}
            {{form_errors(registrationForm.pseudo)}}
        
            {{ form_label(registrationForm.email, 'Please enter your Email *', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(registrationForm.email, {'attr':{'class':'block w-full shadow-sm  border-gray-300 rounded-md border mt-1 mb-2 registration_form_input'}}) }}
            {{form_errors(registrationForm.email)}} 
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-1 md:gap-4">
            <div>
                {{ form_label(registrationForm.plainPassword.first, 'Password *', {'label_attr': {'class': 'block text-sm text-gray-700  font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2 registration_form_input'}})}}
                {{ form_errors(registrationForm.plainPassword.first) }} 
            </div>
            <div>
                {{ form_label(registrationForm.plainPassword.second, 'Repeated Password *', {'label_attr': {'class': 'block text-sm text-gray-700  font-medium'}}) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full shadow-sm border-gray-300  rounded-md border p-2 mt-1 mb-2 registration_form_input'}})}}
                {{ form_errors(registrationForm.plainPassword.second) }} 
            </div>
        </div>

        
        <div class="flex items-center mt-4 mb-4">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 rounded border-gray border text-indigo-900 mr-2'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'text-sm text-gray-700  font-medium '}}) }}
        </div>
        <div class="text-sm text-gray-400">
        <p>By clicking on <a class="text-base text-gray-500">"Agree to Terms"</a>, you agree to our Terms and Conditions. 
        Explore how we collect, use, and share your data by reading our <a  class="agree_to_term"href="{{ path('app_privacy') }}">Privacy Policy</a>, 
        and find information on our practices regarding legal notices, as well as 
        cookies and similar technologies, in our<a class="agree_to_term"href="{{ path('app_legal') }}"> Legal Notice</a> and Cookie Policy. 
        </p>
        </div>
        

        <div class="text-xl mt-4 font-semibold mt-5">
            Your Profile
        </div>
        <div class="text-gray-500 mb-4 pb-4">
            Enter more (optional) deatils about yourself. You can do it later.
        </div>

        {{ include ('/setting_profile/_profile_form.html.twig', { form: registrationForm.userProfile }) }}

        <div class="butt-text-reg">

            <div>
            <button type="submit" class="form-butt-reg">Register</button>
            </div>
            {{ form_end(registrationForm) }}

            <div class="mb-4" >
                Already have an account? <a class="login-link-reg" href="{{ path('app_login') }}">Login here</a>
            </div>
    </div>
  
{% endblock %}
