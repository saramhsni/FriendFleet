{{ form_start(form, {'attr':{'novalidate':'novalidate'}})}}
    <div>
        {{form_errors(form)}}
    </div>
    {{ form_row(form._token) }}
    <div class="mx-8">
        <div>
            {{form_label(form.title, 'Please enter the title', {'label_attr':{'class':'block text-sm text-gray-700 font-medium  mt-5'}})}}
            {{form_widget(form.title, {'attr':{'class':'block w-full  shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2 registration_form_input'}})}}
            {{form_errors(form.title)}}
        </div>

        <div>
            {{form_label(form.message, 'Please enter your message', {'label_attr':{'class':'block text-sm text-gray-700 font-medium  mt-5'}})}}
            {{form_widget(form.message, {'attr':{'class':'block w-full  shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2 registration_form_input'}})}}
            {{form_errors(form.message)}}
        </div>
     </div>

{{ form_end(form)}}