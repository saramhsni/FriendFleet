{% extends 'base.html.twig' %}

{% block title %}Sent Message{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-r from-[#D6D6D6] to-[#F9EFD4]">
        <div>
            {{include('micro_post/_menu.html.twig')}}
        </div>
            <div class="mx-5 md:mx-15 xl:mx-20">
                <div class="flex flex-col mx-6 my-4">
                    {# <h1 class="mb-4">Messages</h1> #}
                    <h1 class="mb-4 font-bold">Sent Messages</h1>
                    <p class="mb-3"> You sent 
                        {{ app.user.sent.count}} 
                        {% if app.user.sent.count > 1 %}
                        messages 
                        {% else %}
                        message
                        {% endif %}
                    </p>

                    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">
                                        To
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Subject
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Date
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        createdAt
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for message in app.user.sent %}
                                
                                {% if message.isRead == 0 %}
                                    {% set bold = "font-bold text-gray-900" %}
                                {% else %}
                                    {% set bold = "" %}
                                {% endif %}
                                <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b">
                                    <td class="px-6 py-4 {{bold}}">
                                       <a href="{{path('app_messages_read', {id:message.id})}}"> {{message.recipient.email}}</a>
                                    </td>
                                    <td class="px-6 py-4 {{bold}}">
                                        <a href="{{path('app_messages_read', {id:message.id})}}">{{message.title}}</a>
                                    </td>
                                    
                                    <td class="px-6 py-4 {{bold}}">
                                        <a href="{{path('app_messages_read', {id:message.id})}}">{{message.message}}</a>
                                    </td>
                                    <td class="px-6 py-4 {{bold}}">
                                        {{message.createdAt| date }}
                                    </td>
                                    <td class="px-6 py-4">
                                    <a href="{{ path('app_messages_delete', {id : message.id }) }}">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                        </svg>
                                    </a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div> 
                    {{ include('messages/_message_button.html.twig')}}
                </div>
            </div>
        
            {{include('messages/_offcanvas.html.twig')}}
    </div>
{% endblock %}
