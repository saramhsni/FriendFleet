{% extends 'base.html.twig' %}

{% block title %}Received Message{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-r from-[#D6D6D6] to-[#F9EFD4]" id="contain">
        <div>
            {{include('micro_post/_menu.html.twig')}}
        </div>
            <div class="flex justify-center mx-5 md:mx-15 xl:mx-20 lg:justify-start" id="profil-posts">
                <div class="flex flex-col mx-6 my-4">
                    {# <h1 class="mb-4">Messages</h1> #}
                    
                    <span class="flex ">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
                        </svg>
                        <h1 class="mb-4 font-bold text-base border-b-2 border-gray-600"><a href="{{path('app_messages_received')}}">All Inbox</a></h1> 
                    </span>
                    <h1 class="mb-4 font-semibold text-lg">Received Message</h1>

                    <h2 class="font-semibold">Title: {{message.title}}</h2>
                    <p>Message of <span class="font-bold"> {{ message.sender.email }}</span></p>
                    <p class="mb-4"><span class="text-gray-500 text-sm ">{{ message.createdAt | date }}</span></p>
                    <div class="flex">
                                        <a class="mr-4 hover:text-gray-900" href="{{path('app_messages_reply', {id:message.id})}}">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                                            </svg>
                                        </a>
                                        <a class="hover:text-gray-900" href="{{ path('app_messages_delete', {id : message.id }) }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                            </svg>
                                        </a>    
                                    </div>
                    <div>{{message.message}}</div>


                    {{ include('messages/_message_button.html.twig')}}
                </div>
            </div>
        
        {{include('messages/_offcanvas.html.twig')}}
        <div class="mt-8 " id="foot">
        {{include('Shared/_footer.html.twig')}}
    </div>
    </div>
{% endblock %}
